@{Layout = null;}
@model ViewModel
    <form asp-area="" asp-controller="Home" asp-action="Register" method="post">
          <h3>Create a new account</h3>
        <div class="form-group">
            Username: <span style="color:red;" asp-validation-for="regUser.Username" ></span><input class="form-control" type="text" asp-for="regUser.Username" placeholder="...min 2 letters, alpha only">
            
            Password: <span style="color:red;" asp-validation-for="regUser.Password"></span><input type="password" asp-for="regUser.Password" class="form-control">

            Password Confirm: <span style="color:red;" asp-validation-for="regUser.ConfirmPassword"></span><input type="password" asp-for="regUser.ConfirmPassword" class="form-control">
            
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>